  <div class="container-pool">
    <div class="cards">
      <% @pools.each do |pool| %>
        <%= link_to pool_path(pool.id) do %>
          <div class="fi-card">
            <div class="fi-image">
              <% if pool.photo.attached? %>
                <%= cl_image_tag pool.photo.key, width: 400, height: 250, crop: :fill %>
              <% else %>
                <%= cl_image_tag("default", width: 400, height: 250, crop: :fill) %>
              <% end  %>
            </div>
            <div class="fi-text">
              <h2 class="fi-text-js text-center"><%= pool.location %></h2>
              <h3 class="fi-text-js text-center"><%= pool.description %></h3>
            </div>
          </div>
        <% end %>
        <!--             <strong class="card-text fi-text-js text-center"><%= pool.location %></strong> -->
      <% end %>
     </div>
  </div>







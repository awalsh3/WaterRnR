                  <div class="carousel-item active">
                    <img class="d-block w-100" src="https://res.cloudinary.com/dkgzrlgdu/image/upload/v1620932269/roberto-nickson-h1_ILkb9tLo-unsplash_qgjjus.jpg" alt="London">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="https://res.cloudinary.com/dkgzrlgdu/image/upload/v1620931933/backgound_vqpuxw.jpg" alt="<Milan">
                  </div>
                  <div class="carousel-item">
                    <img class="d-block w-100" src="https://res.cloudinary.com/dkgzrlgdu/image/upload/v1620761383/Sydney-Icebergs-unsplash_cclbai.jpg" alt="Paris">
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

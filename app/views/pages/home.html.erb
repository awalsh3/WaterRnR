<div class="banner">
  <div class="container">
    <div class="row">
      <div class="col-sm-5">
        <div class="card border-0">
          <div class="card-body" id="search-box">
          <h1 class="h3 mb-3">Book residential pools only on WaterRnR</h1>
            <%= simple_form_for :search, url: pools_path, method: :get do |f| %>
